@model Geocrest.Web.Mvc.Models.ChangePassword

@{
    ViewBag.Title = "Change Password";
}
<section class="page">
    <div class="container">
        <div class="row text-center changepassword">
            <div class="col-sm-8 col-sm-offset-2 col-md-6 col-md-offset-3 title">
                <h2>Use this form to change your password.</h2>

                <div class="alert alert-warning">
                    Passwords must be at least @Membership.MinRequiredPasswordLength characters long.
                </div>
            </div>

            <div class="col-sm-8 col-sm-offset-2 col-md-6 col-md-offset-3">
                @using (Html.BeginForm("changepassword", "account",
                    new { area = "" }, FormMethod.Post, new { @class = "form-horizontal well" }))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary()

                    @Forms.TextBox(Html, m => m.OldPassword, new { @class = "form-control"})
                    @Forms.TextBox(Html, m => m.NewPassword, new { @class = "form-control"})
                    @Forms.TextBox(Html, m => m.ConfirmPassword, new { @class = "form-control"})
                    <div class="form-group">
                        <div class="col-sm-8 col-sm-offset-4">
                            <button type="submit" class="btn btn-primary btn-block">Change password</button>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</section>
